<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apps.omnipotent.manager.dao.MenuDao">

    <select id="queryByRoleId" resultType="com.apps.omnipotent.manager.bean.Menu">
        select t.* from be_menu t where effective_flag = 1 and delete_flag=1 and t.menuId in (select m.menu_id from  be_role_menu m where role_id= #{roleId})
    </select>

    <select id="pageList" resultType="com.apps.omnipotent.manager.bean.Menu">
        select t.*
            from be_menu t
            where t.effective_flag = 1 and t.delete_flag=1
    </select>

    <select id="findById" resultType="com.apps.omnipotent.manager.bean.Menu">
        select * from be_menu where menu_id=#{menuId}
    </select>

    <update  id="remove" parameterType="com.apps.omnipotent.manager.bean.Menu">
        update be_menu  set delete_flag = 0 where menuId=#{menuId}
    </update >

    <insert id="add" parameterType="com.apps.omnipotent.manager.bean.Menu">
    	insert into be_menu (menu_id,iconcls,menu_text,url,level,menu_type,notes,parent,effective_flag,delete_flag)
    	values(#{menuId},#{iconCls},#{menuText},#{url},#{level},#{menu_type},#{notes},#{parent},'1','1')
    </insert>

    <update  id="update" parameterType="Integer">
    	update be_menu set icon=#{icon},menuText=#{menuText},url=#{url}
    	    ,level=#{level},menuType=#{menuType},notes=#{notes}
        <if test="parent != null and parent != ''">,parent=#{parent}</if>
         where menuId=#{menuId}
    </update >
</mapper>